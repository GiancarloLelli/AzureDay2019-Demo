<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <ul id="ProductList">
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <ul id="CustomerList">
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Orders</h2>
        <ul id="OrderList">
        </ul>
    </div>
</div>
<script>

    function addListItemToUnorderedList(id, item) {
        var ul = document.getElementById(id);
          var li = document.createElement('li');
          li.appendChild(document.createTextNode(item));
          ul.appendChild(li);
    }

    (function () {
        // Get Products
        $.get("/api/Products", function (data) {
            for (var i = 0; i < data.items.length; i++) {
                addListItemToUnorderedList('ProductList', data.items[i]);
            }
        });

        // Get Customers
        $.get("/api/Customers", function (data) {
            for (var i = 0; i < data.items.length; i++) {
                addListItemToUnorderedList('CustomerList', data.items[i]);
            }
        });

        // Get Orders
        $.get("/api/Orders", function (data) {
            for (var i = 0; i < data.items.length; i++) {
                addListItemToUnorderedList('OrderList', data.items[i]);
            }
        });
    })();
</script>